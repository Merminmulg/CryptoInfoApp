<Page x:Class="CryptoInfoApp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoInfoApp.Views"
      xmlns:mv="clr-namespace:CryptoInfoApp.ModelViews"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=mv:MainPageVM}"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/SmallButton.xaml"/>
                <ResourceDictionary Source="../Styles/ViewListStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.2,0">
                <GradientStop Color="#FF41305A"/>
                <GradientStop Color="#FF6D60A9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <!--<Button Style="{StaticResource SmallButton}" Tag="../Icons/exitIcon.png" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30"/>-->
        <Button Command="{Binding RefreshChartCommand}" Style="{StaticResource SmallButton}" Content="U" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="30"/>
        <!--<Button Style="{StaticResource SmallButton}" Tag="../Icons/backArrow.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30"/>-->
        <ListView Style="{StaticResource BaseViewList}" ScrollViewer.CanContentScroll="True"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                  Padding="0" BorderThickness="2" Grid.Row="1" 
                  ItemsSource="{Binding Currencies}" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center" Background="#FF101015" 
                  FontSize="20" FontFamily="Bahnschrift Condensed" 
                  Height="720" Width="900" Foreground="#FFD0CECE">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="160"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Source="{Binding Image}" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Left" Width="80" Height="80"/>


                        <TextBlock Text="{Binding Name}" Margin="10 0 0 0" TextWrapping="Wrap" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="0"/>
                        <TextBlock Text="{Binding CurrencySymbol}" Margin="10 0 0 0" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>

                        <WrapPanel Grid.Column="3" Margin="0 10 0 0">
                            <TextBlock Text="Price: " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding CurrentPrice, StringFormat=N3}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="$" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </WrapPanel>

                        <WrapPanel Grid.Column="4" Grid.Row="0" Margin="10 10 0 0">
                            <TextBlock Text="Market Cap Rank : " Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding MarketCapRank}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </WrapPanel>

                        <WrapPanel Grid.Column="4" Grid.Row="1" Margin="10 10 0 0">
                            <TextBlock Text="Market Cap : " Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding MarketCap, StringFormat=N2}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="$" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </WrapPanel>

                        <WrapPanel Grid.Column="5" Margin="20 10 0 0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding PriceChange24h, StringFormat=N3}" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="$" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </WrapPanel>
                        <WrapPanel Grid.Column="5" Grid.Row="1" Margin="20 10 0 0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding PriceChangePercantage24h, StringFormat=N3}" Grid.Column="5" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="%" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </WrapPanel>

                        <Button Style="{StaticResource SmallButton}" Grid.Column="6" Grid.RowSpan="2" Content="i" HorizontalAlignment="Right" VerticalAlignment="Center" >
                            
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
